<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amis"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Name="AmisLogin" x:Class="Amis.MainWindow"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="White"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="Noto Sans CJK SC Regular"
        Title="登陆Amis" Height="480" Width="320" 
        Loaded="AmisLogin_Loaded" Closing="AmisLogin_Closing" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" WindowStyle="None" >

    <Grid x:Name="GridBackground" Opacity="0.9">
        <TextBox x:Name="tbUsername" Height="28.8" Margin="80.8,0,79.2,159.2" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="160"/>
        <Rectangle x:Name="rectTitlebar" Height="240" VerticalAlignment="Top" MouseMove="RectTitlebar_MouseMove" >
            <Rectangle.Fill>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/LoginBck1.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="lblTitle" Content="Amis" Margin="104.6,61.8,103.798,0" VerticalAlignment="Top" FontWeight="Normal" Foreground="White" FontSize="48" FontFamily="Palace Script MT" HorizontalAlignment="Center"/>
        <Label x:Name="lblSubtitle" Content="文 体 两 开 花" Margin="101.7,143.4,100.3,0" VerticalAlignment="Top" FontSize="18" Foreground="White" FontFamily="Noto Sans CJK SC Medium" FontWeight="Normal" d:LayoutOverrides="Width" TextOptions.TextFormattingMode="Display"/>
        <TextBox x:Name="tbPassword" Height="28.8" Margin="80.8,0,79.2,98.4" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="160" />
        <Label x:Name="lblUsername" Content="用户名" HorizontalAlignment="Left" Margin="80.8,0,0,188" VerticalAlignment="Bottom" Padding="0,5,5,0" FontSize="12" TextOptions.TextFormattingMode="Display"/>
        <Label x:Name="lblPassword" Content="密码" HorizontalAlignment="Left" Margin="80.8,0,0,127.2" VerticalAlignment="Bottom" Padding="0,5,5,0" FontSize="12" TextOptions.TextFormattingMode="Display"/>
        <Button x:Name="btnLogin" Content="登陆" HorizontalAlignment="Left" Height="30" Margin="121.599,0,0,28.533" VerticalAlignment="Bottom" Width="80" Style="{DynamicResource MaterialDesignRaisedDarkButton}" TextOptions.TextFormattingMode="Display" Click="BtnLogin_Click" RenderTransformOrigin="0.535,1.269"/>
        <Button x:Name="btnExit" Content="退出" HorizontalAlignment="Left" Height="20.133" Margin="260,0,0,15.4" VerticalAlignment="Bottom" Width="40" Style="{DynamicResource MaterialDesignToolButton}" FontSize="11" RenderTransformOrigin="0.172,0.956" TextOptions.TextFormattingMode="Display" Click="BtnExit_Click" Padding="2"/>
        <Label x:Name="lblMessage" Content="" Margin="80.8,0,79.2,73.64" VerticalAlignment="Bottom" FontSize="12" Padding="1"/>
    </Grid>
</Window>
